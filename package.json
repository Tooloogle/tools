{
  "name": "@tooloogle/tools",
  "version": "1.0.0",
  "description": "Web components library for the tooloogle.com",
  "scripts": {
    "dev": "vite --config vite.config.demo.js",
    "start": "npm run dev",
    "css": "node css-to-ts.js",
    "build:demo": "npm run css && vite build --config vite.config.demo.js",
    "build:tools": "npm run css && npm run build:tools:esm && npm run build:tools:cjs",
    "build:tools:esm": "tsc -p tsconfig.json --outDir dist",
    "build:tools:cjs": "tsc -p tsconfig.json --module commonjs --outDir dist/cjs",
    "clean": "npx rimraf dist* && npx rimraf src/**/*.css.ts",
    "lint": "eslint src/**/*.ts css-to-ts.js",
    "lint:fix": "npm run lint -- --fix",
    "new": "node create-new-tool.js",
    "postbuild": "node postbuild.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tooloogle/tools.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "online",
    "tools",
    "tooloogle",
    "online tool",
    "utility tool"
  ],
  "author": "Sanjay Kumar Nishad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tooloogle/tools/issues"
  },
  "homepage": "https://github.com/Tooloogle/tools#readme",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/jest": "^29.5.2",
    "@types/js-beautify": "^1.14.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.44.0",
    "eslint-plugin-lit": "^2.1.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.0",
    "jest": "^29.5.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.6.1",
    "postcss": "^8.4.25",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite": "^7.1.5"
  },
  "dependencies": {
    "dayjs": "^1.11.8",
    "js-beautify": "^1.15.4",
    "lit": "^2.7.5",
    "qr-code-styling": "^1.9.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "README.md",
            "CHANGELOG.md",
            "dist/**/*.{js}"
          ]
        }
      ]
    ]
  }
}